{
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": 2020
    },
    "extends": ["plugin:lvksh/recommended"],
    "ignorePatterns": ["!**/*"],
    "plugins": ["lvksh"],
    "env": {
        "node": true
    },
    "rules": {
        "prefer-at": "off",
        "curly": ["error", "multi-or-nest"],
        "unused-imports/no-unused-vars": "off",
        "prettier/prettier": "off"
    }
}
